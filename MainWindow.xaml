<Window x:Class="QuantumSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quantum" Width="1280" Height="720"
        Background="#0A0F13"
        WindowStyle="None"
        WindowState="Maximized"
        Topmost="True"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Icon="/component/icon.ico">

    <Window.Resources>
        <DropShadowEffect x:Key="NeonGlowGreen" Color="#00FF66" BlurRadius="60" ShadowDepth="0" Opacity="1.0"/>
        <DropShadowEffect x:Key="NeonGlowPurple" Color="#C000FF" BlurRadius="32" ShadowDepth="0" Opacity="0.9"/>

        <Storyboard x:Key="PanelPulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetName="HardwarePanel"
                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            From="#00FF66" To="#FFFFFF" Duration="0:0:2" />
        </Storyboard>

        <Storyboard x:Key="BotPanelPulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetName="BotPanel"
                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            From="#00FF66" To="#FFFFFF" Duration="0:0:2" />
        </Storyboard>

        <Storyboard x:Key="WallpaperPulseAnimation" RepeatBehavior="Forever" AutoReverse="True">
            <ColorAnimation Storyboard.TargetName="WallpaperBorder"
                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                            From="#00FF66" To="#FFFFFF" Duration="0:0:2" />
        </Storyboard>

        <Storyboard x:Key="NeonPulseAnimationGreen" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="NeonText"
                             Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.BlurRadius)"
                             From="14" To="28" Duration="0:0:2" />
            <DoubleAnimation Storyboard.TargetName="NeonText"
                             Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Opacity)"
                             From="0.7" To="1.0" Duration="0:0:2" />
        </Storyboard>

        <Storyboard x:Key="NeonPulseAnimationPurple" RepeatBehavior="Forever" AutoReverse="True">
            <DoubleAnimation Storyboard.TargetName="SubTitle"
                             Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.BlurRadius)"
                             From="8" To="18" Duration="0:0:2.5" />
            <DoubleAnimation Storyboard.TargetName="SubTitle"
                             Storyboard.TargetProperty="(TextBlock.Effect).(DropShadowEffect.Opacity)"
                             From="0.6" To="1.0" Duration="0:0:2.5" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Arka plan -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0A0F1A" Offset="0"/>
                <GradientStop Color="#1B2430" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- İki ana kolon: Sol içerik / Sağ wallpaper -->
        <Grid Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <!-- Sol kolon: 2 satır (üst içerik + alt panel) -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Donanım Paneli -->
                <Border x:Name="HardwarePanel"
        Grid.Row="0"
        CornerRadius="20"
        Margin="40"
        Padding="25"
        Background="#2B2633E6"
        BorderBrush="#00FF66"
        BorderThickness="1">

                    <StackPanel>

                        <!-- NEON BAŞLIK -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,25">
                            <TextBlock x:Name="SubTitle"
                    Text="Teknolojide"
                    FontFamily="/QuantumSystem;component/Fonts/Aileron-Regular.otf#Aileron"
                    FontSize="25"
                    Margin="0,0,0,5"
                    Foreground="#FFFFFF"
                    Effect="{StaticResource NeonGlowPurple}"
                    TextAlignment="Center"/>
                            <TextBlock x:Name="NeonText"
                       FontSize="45"
                       FontWeight="Bold"
                       Foreground="#FFFFFF"
                       Effect="{StaticResource NeonGlowGreen}"
                       TextAlignment="Center">
                <Run Language="tr-tr" Text="Quantum Etkisi başladı"/>
                            </TextBlock>
   
                        </StackPanel>

                        <!-- ALT BAŞLIK -->
                        <TextBlock Text="Donanım Özeti"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#00FF66"
                   TextAlignment="Center"/>

                        <TextBlock Text="Quantum gücüyle performansınızı keşfedin."
                   FontSize="14"
                   Foreground="#B0BEC5"
                   Margin="0,10,0,20"
                   TextAlignment="Center"/>

                        <!-- DONANIM SATIRLARI -->
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Border Background="#00FF66" Width="42" Height="42" CornerRadius="8">
                                    <Image x:Name="CpuIcon" Width="28" Height="28" Margin="7"/>
                                </Border>
                                <TextBlock x:Name="CpuText"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Border Background="#1E90FF" Width="42" Height="42" CornerRadius="8">
                                    <Image x:Name="ScreenIcon" Width="28" Height="28" Margin="7"/>
                                </Border>
                                <TextBlock x:Name="ScreenText"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Border Background="#C000FF" Width="42" Height="42" CornerRadius="8">
                                    <Image x:Name="GpuIcon" Width="28" Height="28" Margin="7"/>
                                </Border>
                                <TextBlock x:Name="GpuText"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Border Background="#00C9A9" Width="42" Height="42" CornerRadius="8">
                                    <Image x:Name="RamIcon" Width="28" Height="28" Margin="7"/>
                                </Border>
                                <TextBlock x:Name="RamText"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0"
                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,10">
                                <Border Background="#FFD700" Width="42" Height="42" CornerRadius="8">
                                    <Image x:Name="DiskIcon" Width="28" Height="28" Margin="7"/>
                                </Border>
                                <TextBlock x:Name="DiskText"
                           FontSize="16"
                           Foreground="White"
                           Margin="10,0"
                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>
                </Border>


                <!-- Alt panel -->
                <Border x:Name="BotPanel"
                        Grid.Row="1"
                        Height="65"
                        Margin="40,0,40,0"
                        CornerRadius="12"
                        Background="#151A22"
                        BorderBrush="#00FF66"
                        BorderThickness="1"
                        VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Border Background="#FFFFFF" Width="42" Height="42" CornerRadius="8">
                            <Image x:Name="WindowsIcon" Width="28" Height="28" Margin="7"/>
                        </Border>
                        <TextBlock Text="En iyi deneyim için Windows 11 ile deneyin!"
                                   FontSize="20" FontWeight="Bold"
                                   Foreground="#00FF66"
                                   VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Sağ wallpaper -->
            <Grid Grid.Column="1" Margin="20">
                <Viewbox Stretch="Uniform" StretchDirection="DownOnly">
                    <!-- Görüntü + neon kenarlık birlikte -->
                    <Border x:Name="WallpaperBorder"
                            BorderBrush="#00FF66"
                            BorderThickness="2"
                            SnapsToDevicePixels="True">
                        <Image x:Name="InnerImage"
                               Source="pack://application:,,,/QuantumSystem;component/GamingWallpaper.jpg"
                               Stretch="Uniform"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.95"/>
                    </Border>
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource NeonPulseAnimationGreen}" />
            <BeginStoryboard Storyboard="{StaticResource NeonPulseAnimationPurple}" />
            <BeginStoryboard Storyboard="{StaticResource PanelPulseAnimation}" />
            <BeginStoryboard Storyboard="{StaticResource BotPanelPulseAnimation}" />
            <BeginStoryboard Storyboard="{StaticResource WallpaperPulseAnimation}" />
        </EventTrigger>
    </Window.Triggers>
</Window>
